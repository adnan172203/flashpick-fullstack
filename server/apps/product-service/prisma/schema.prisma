generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("PRODUCT_DATABASE_URL")
}

model Product {
  id              String   @id @default(uuid())
  name            String
  description     String
  price           Decimal
  quantity        Int
  sku             String
  color           String?
  size            String?
  stock           Int      @default(0)
  status          Boolean  @default(false)
  fullDescription String
  additionalText  String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model productImageGalleries {
  id        String   @id @default(uuid())
  productId String
  imageUrl  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
